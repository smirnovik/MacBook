import UIKit

enum engineState {
    case start, stop
}

enum AreWindowsOpen {
    case open, close
}

enum trunkState {
    case full, empty
}

struct car {
    let brandAuto : String
    var color : String
    mutating func changeColor (c:String) {
        switch c {
        case "white":
            self.color = "white"
        case "black":
            self.color = "black"
        case "gray":
            self.color = "gray"
        case "blue":
            self.color = "blue"
        default:
            print("Error color.")
        }
    }
    
    var trunkState : trunkState
    mutating func emptyTrunck() {
        self.trunkState = .empty
        print ("\(brandAuto) trunck is empty")
    }
    
    let yearOfManufacture : Int
    var trunkVolume : Double {
        willSet {
            if (trunkState == .empty) && (trunkVolume > 0) && (trunkVolume != 0) && (newValue < trunkVolume) {
                let space = trunkVolume - newValue
                print ("\(brandAuto) trunk free: \(space)")
            } else { print("Error or \(brandAuto) trunk is full.")}
        }
    }
    var engineState : engineState {
        willSet {
            if newValue == .start {
                print ("\(brandAuto) engine is on")
            } else {print("\(brandAuto) engine is off")}
        }
    }
    var AreWindowsOpen : AreWindowsOpen {
        willSet {
            if newValue == .open {
                print("\(brandAuto) windows are open")
            } else { print("\(brandAuto) windows are close") }
        }
    }
   
}

struct truck {
    let brandTruck : String
    var color : String
    mutating func changeColor(c:String) {
        switch c {
        case "white":
            self.color = "white"
        case "black":
            self.color = "black"
        case "red":
            self.color = "red"
        case "blue":
            self.color = "blue"
        default:
            print("Error color.")
        }
    }
    
    var trunkState : trunkState
    mutating func emptyTrunck() {
        self.trunkState = .empty
        print ("\(brandTruck) trunck is empty")
    }
    
    let yearOfManufacture : Int
    var truckVolume : Double {
        willSet {
            if (trunkState == .empty) && (truckVolume > 0) && (truckVolume != 0) && (newValue < truckVolume) {
                let space = truckVolume - newValue
                print ("\(brandTruck) trunk free: \(space)")
            } else { print("Input error or \(brandTruck) trunk is full.")}
        }
    }
    var engineState : engineState {
        willSet {
            if newValue == .start {
                print ("\(brandTruck) engine is on")
            } else {print("\(brandTruck) engine is off")}
        }
    }
    var AreWindowsOpen : AreWindowsOpen {
        willSet {
            if newValue == .open {
                print("\(brandTruck) windows are open")
            } else { print("\(brandTruck) windows are close") }
        }
    }
}

var car1 = car(brandAuto: "Mercedes",  color: "clear", trunkState: .empty, yearOfManufacture: 2016, trunkVolume: 580.0 , engineState: .stop, AreWindowsOpen: .open)
var car2 = car(brandAuto: "Hiundai",  color: "clear", trunkState: .full, yearOfManufacture: 2017, trunkVolume: 480.0, engineState: .stop, AreWindowsOpen: .close)

var truck1 = truck(brandTruck: "MAN",  color: "clear", trunkState: .full, yearOfManufacture: 2012, truckVolume: 950.0, engineState: .start, AreWindowsOpen: .open)
var truck2 = truck(brandTruck: "KAMAZ",  color: "clear", trunkState: .empty, yearOfManufacture: 2013, truckVolume: 780.0, engineState: .start, AreWindowsOpen: .close)


car1.engineState = .start
car1.trunkVolume = 210.0
car1.changeColor(c: "black")
car2.trunkVolume = 700.0
car2.emptyTrunck()
car2.trunkVolume = 190.5
car2.AreWindowsOpen = .open
car2.changeColor(c: "white")

truck1.engineState = .stop
truck1.AreWindowsOpen = .close
truck2.AreWindowsOpen = .open
truck2.engineState = .stop
truck2.truckVolume = 770
truck2.changeColor(c: "blue")
truck2.color
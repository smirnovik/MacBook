//1. Решить квадратное уравнение.

var a:Float = 1
var b:Float = 12
var c:Float = 36
var d:Float
var x1:Float
var x2:Float
d = b*b - 4*a*c
if d>0 {
    x1 = ((-b - sqrt(d))/(2*a))
    x2 = ((-b + sqrt(d))/(2*a))
    print (x2,x1)
}else if d==0{
    x1 = ((-b - sqrt(d))/(2*a))
    print(x1)
}else{
print("решение невозможно")
}
